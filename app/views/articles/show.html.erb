<div class="row">

  <div class="span6">
    <h2><%= @article.title %></h2>
    <small><%= l @article.created_at, :format => :long %> |
      Autor:
      <%= raw @article.author_list.map { |l| link_to l, author_path(l) }.join(', ') %>
      <%# @article.authors.each do |author| %>
        <%#= author.name %>
      <%# end %>
    </small><br />
    <% if @article.tag_list.present? %>
    <small>Ã‰tiquettes: <%= raw @article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></small><br />
    <% end %>
  </div>

  <% if @article.avatar.present? %>
  <div class="span6">
    <div class="thumbnail">
      <%= image_tag @article.avatar.url(:slide), class: "img-polaroid" %>
    </div>
  </div>
  <% end %>
  <div class="span6">
    <div class="page-header"></div>
    <!-- AddThis Button BEGIN -->
    <div class="addthis_toolbox addthis_default_style ">
    <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
    <a class="addthis_button_tweet"></a>
    <a class="addthis_button_pinterest_pinit"></a>
    <a class="addthis_counter addthis_pill_style"></a>
    </div>
    <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-4f61bb9a645ee3b3"></script>
    <!-- AddThis Button END -->
    <div class="page-header"></div>
<!--     <strong><%#= raw @article.preview %></strong> -->
  </div>
  <div class="span6">
    <%= raw @article.content %>
    <%= link_to 'Retour', articles_path %>
  </div>
  <% if @related_articles.nil? %>
  <div class="span6">
    <div class="page-header"></div>
    <h5>Articles connexes</h5>
      <% for art in @related_articles %>
        <div class="span">
          <%= link_to image_tag(art.avatar.url(:thumb), size: "100x100"), art %>
          <h6 style="width:100px;"><%= link_to (truncate(art.title, omision: "...", length: 50)), art %></h6>
        </div>
      <% end %>
  </div>
  <% end %>
  <div class="span6">
    <div class="page-header"></div>
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'courrierdemoldavie'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
  </div>
</div>

