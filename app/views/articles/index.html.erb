<div class="span6">
  <div class="dropdown">
    Afficher les articles par
    <a class="dropdown-toggle" id="drop4" role="button" data-toggle="dropdown" href="#">
      année
      <b class="caret"></b></a>
    <ul id="menu1" class="dropdown-menu" role="menu" aria-labelledby="drop4">
      <% for art in articles_by_years do %>
      <li><%= link_to art, articles_path( :year => art) %></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="span6">
  <% @articles.each do |article| %>
    <%= image_tag 'divider.gif', class: "article_divider" %>
    <h4><%= link_to article.title, article %></h4>
    <h6>author:
      <%= raw article.author_list.map { |t| link_to t, author_path(t) }.join(', ') %>
    </h6>
    <div class="row">
      <div class="span2">
        <% if article.avatar.present? %>
          <%= link_to (image_tag article.avatar.url(:thumb)), article %>
        <% else %>
          <%= link_to image_tag "nophoto.png" %>
        <% end %>
      </div>
      <div class="span4">
        <%= sanitize truncate(article.content, omision: "...", length: 700), :tags => %w(h) %><br />
        <h6><%= link_to 'Lire la suite', article %></h6>
      </div>
      <div class="span4"></div>
    </div>
    <h6>
      Étiquettes: <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
    </h6>
<!--     <div><small><strong>views: <%#= article.views %></strong></small></div> -->
    <span class="pull-right"><small><%= l article.created_at, :format => :long %></small></span>
    <span class=""><small>Edition: <%= link_to article.edition.name, articles_path(edition: article.edition.name) if article.edition.present? %></small></span>

  <% end %>
  <%= image_tag 'divider.gif', class: "article_divider" %>
  <%= will_paginate @articles %>
</div>
