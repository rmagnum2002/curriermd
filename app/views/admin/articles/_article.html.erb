<div class="row" style="width:800px;margin:auto;">

  <div class="span8">
    <h2><%= @article.title %></h2>
    <small><%= l @article.created_at, :format => :long %> |
      Autor:
      <%= raw @article.author_list.map { |l| link_to l, author_path(l) }.join(', ') %>
      <%# @article.authors.each do |author| %>
        <%#= author.name %>
      <%# end %>
    </small><br />
    <small>Tags: <%= raw @article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></small><br />
  </div>

  <div class="span8">
    <div class="thumbnail">
      <%= image_tag @article.avatar.url, class: "img-polaroid" %>
    </div>
  </div>
  <div class="span8">
    <div class="page-header"></div>
    <strong><%= raw @article.preview %></strong>
  </div>
  <div class="span8">
    <%= raw @article.content %>
    <div class="page-header"></div>
  </div>
</div>
