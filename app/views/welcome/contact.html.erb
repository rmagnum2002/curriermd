    <li>
      <label for="name">Email <span class="req">*</span></label>
      <%= f.email_field :email, class:'span5', placeholder: "Your email" %>
    </li>
    <li>
      <label for="name">Phone <span class="req">*</span></label>
      <%= f.phone_field :phone, class:'span5', placeholder: "Your phone" %>
    </li>
    <li>
      <label for="name">Message <span class="req">*</span></label>
      <%= f.text_area :message, class:'span5', placeholder: "Your message", rows: "5" %>
    </li>
  </ol>
  <div class="blankSeparator"></div>
  <div class="btnLeft">
    <%= f.submit "SEND MESSAGE", :type => 'submit', :class => 'btn' %>
  </div>
  <br />
  <% end %>
