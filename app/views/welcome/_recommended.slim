.span7
  ul.media-list
    - for art in @recomends
      li
        .span2
          - if article.avatar.attached?
            = link_to image_tag(article.avatar.variant(resize: "100x100!")), article_path(art)
          - else
            = link_to (image_tag("nophoto.png", size: "100x100")), article_path(art)
          br
          small
            b
            = link_to truncate(art.title, omision: "...", length: 50), art
          br
